{
  "manifest_version": 3,
  "name" : "__MSG_ext_name__",
  "description": "__MSG_ext_description__",
  "default_locale" : "en",
  "version": "2.1.0",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/icon48.png",
        "img/icon128.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],

  "action": {
    "default_title": "__MSG_ext_name__"
  },

  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  }
}
